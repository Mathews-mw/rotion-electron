{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@*": ["./src/*"],
    }
  },
  "include": [
    "src",
    "src/preload/index.d.ts",
    "electron.vite.config.*"
, "shared"  ],
  "exclude": [
    "node_modules"
  ],
}